html, body
  width: 100%
  height: 100%
  padding: 0
  margin: 0
  overflow: hidden
  font-family: 'Avenir', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #666
  background-color: #f9f9fa
body
  position: relative
  box-sizing: border-box
img
  display: block
input
  border: none
  color: #333
  &:focus
    outline: none
button
  border: none
  &:focus
    outline: none
  &:active
    opacity: 0.4
ul
  list-style: none
  margin: 0
  padding: 0
h1, h2, h3, h4, h5, h6, p
  margin: 0
  line-height: 1.2
div
  box-sizing: border-box
p
  margin: 0
textarea
  resize: none
  color: #333
  &:focus
    outline: none
  &:disabled
    background-color: rgba(0, 0, 0, 0)
    color: #999
    -webkit-text-fill-color: #999
    opacity: 1
select:focus
  outline: none
